<div class="post-list flex">
    <% page.posts.forEach((post) => { %>
        <div class="post-list-item card flex">
            <% if (theme.show_feature && post.feature) { %>
                <a class="post-feature-link" href="<%= url_for(post.path) %>">
                    <img class="post-feature-image" <%# loading="lazy" %>
                        src="<%= post.feature %>" alt="<%= post.title %>">
                </a>
            <% } %>
            <div class="post-left">
                <% if (post.top) { %>
                    <span class="sticky-top-flag bg-accent-first">置顶</span>
                <% } %>
                <a href="<%- url_for(post.path) %>" class="post-title">
                    <%= post.title %>
                </a>
                <div class="post-excerpt">
                    <p><%= strip_html(post.excerpt) %></p>
                </div>
                <div class="post-info">
                    <span>
                        <time class="post-time">
                            <%- date(post.date) %>
                        </time>
                        <% post.categories.forEach((category) => { %>
                            · <a href="<%= url_for(category.path) %>" class="post-category">
                                <%= category.name %>
                            </a>
                        <% }); %>
                        <%# post.tags.forEach((tag) => { %>
                            <!-- <a href="<%#= url_for(tag.path) %>" class="post-tag">
                                #<%#= tag.name %></a> -->
                        <%# }); %>
                    </span>
                    <a class="post-more" href="<%- url_for(post.path) %>">继续阅读</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>
